/* pages/crop/crop.wxss */
.circle {
  width: 420px;
	height: 420px;
	box-shadow: 0px 3px 10px 0px 
		rgba(0, 0, 0, 0.16);
	border-radius: 50%;
  border: solid 3px #ffffff;
}
.pink {
  background-image: radial-gradient(
		#EAAFC8, 
		#ffffff);
	box-shadow: -3px 3px 10px 0px 
		rgba(0, 0, 0, 0.16);
}
image {
  background: #808080;
}
.title {
  font-family: PingFang SC;
	font-size: 50px;
	font-weight: 500;
	font-stretch: normal;
	line-height: 70px;
	letter-spacing: 0px;
	color: #ee9ca7;
}
.rbtn {
  width: 128px;
  height: 57px;
	box-shadow: 0px 3px 10px 0px 
		rgba(0, 0, 0, 0.16);
	border-radius: 20px;
  border: solid 3px #ffffff;
  font-family: PingFang SC;
	font-size: 24px;
	font-weight: 500;
	font-stretch: normal;
	line-height: 37px;
	letter-spacing: 0px;
  color: #ffffff;
  position: none;
  display: flex;
  flex-direction: row; align-items: center; justify-content: center;
  margin-left: 0px;
  margin-right: 0px;
  padding-left: 0px;
  padding-right: 0px;
}
.color {
  background-image: linear-gradient(210deg, 
  #ffdde1 0%, 
  #ee9ca7 100%);
}
.sbtn {
	width: 80px;
  height: 34px;
	box-shadow: 0px 3px 10px 0px 
		rgba(0, 0, 0, 0.16);
	border-radius: 20px;
  border: solid 1px #ffffff;
  font-family: PingFang SC;
	font-size: 14px;
	font-weight: 300;
	font-stretch: normal;
	line-height: 37px;
	letter-spacing: 0px;
  color: #ffffff;
  position: none;
  display: flex;
  flex-direction: row; align-items: center; justify-content: center;
  margin-left: 0px;
  margin-right: 0px;
  padding-left: 0px;
  padding-right: 0px;
}
.footer {
  font-family: PingFang SC;
	font-size: 26px;
	font-weight: 150;
	font-stretch: normal;
	line-height: 30px;
	letter-spacing: 0px;
	color: #ee9ca7;
}
.btn {
  display: flex; flex-direction: row; align-items: center; justify-content: center;
  width: 50px;
	height: 50px;
	box-shadow: 0px 3px 6px 0px 
    rgba(0, 0, 0, 0.16);
  border-radius: 50%;
  border: solid 2px #ffffff;
  margin: 12px;
  background-blend-mode: screen;
  text-align: center;
	line-height: 50px;
	padding-left: 0px;
	padding-right: 0px;
	margin-left: 0px;
	margin-right: 0px;
	box-sizing: content-box;
	padding: 0px 0px;
}
.note {
  font-family: PingFang SC;
	font-size: 14px;
	font-weight: 200;
	font-stretch: normal;
	line-height: 20px;
	letter-spacing: 0px;
  color: #808080;
  /* margin: 24px;
  margin-top: 2px; */
}
.mode {
	width: 70px;
  height: 40px;
	border-radius: 20px;
  border: solid 2px #ee9ca7;
  font-family: PingFang SC;
	font-size: 22px;
	font-weight: 200;
	font-stretch: normal;
	line-height: 40px;
	letter-spacing: 0px;
  color: #ee9ca7;
  position: none;
  display: flex;
  flex-direction: row; align-items: center; justify-content: center;
  margin-left: 2.5px;
  margin-right: 2.5px;
  padding-left: 0px;
  padding-right: 0px;
}


.main{
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.content{
  z-index: 9;
  position: absolute;
  width:100vw;
  height:100vh;
  display: flex;
  flex-direction:column;
  pointer-events:none;
}
.bg_gray{
  background: rgba(0, 0, 0, 0.45);
  transition-duration: .35s;
}
.content>.content_top{
  pointer-events:none;
}
.content>.content_middle{
  display: flex;
  height: 200px;
  width:100%;
}
.content_middle_middle{
  width:200px;
  box-sizing:border-box;
  position: relative;
  transition-duration: .3s;
}
.content_middle_right{
  flex: auto;
}
.content>.content_bottom{
  flex: auto;
}
.cropper-canvas{
  position: fixed;
  background: white;
  width:150px;
  height:150px;
  z-index: 10;
  top:-200%;
  pointer-events:none;
}