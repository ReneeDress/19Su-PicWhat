/* pages/scan/scan.wxss */
.circle {
  width: 420px;
	height: 420px;
	box-shadow: 0px 3px 10px 0px 
		rgba(0, 0, 0, 0.16);
	border-radius: 50%;
  border: solid 3px #ffffff;
}
.blue {
  background-image: radial-gradient(
		#6DD5ED, 
		#ffffff);
	box-shadow: -3px 3px 10px 0px 
		rgba(0, 0, 0, 0.16);
}
image {
  background: #808080;
}
.title {
  font-family: PingFang SC;
	font-size: 50px;
	font-weight: 500;
	font-stretch: normal;
	line-height: 70px;
	letter-spacing: 0px;
	color: #1c92d2;
}
.rbtn {
  width: 128px;
  height: 57px;
	box-shadow: 0px 3px 10px 0px 
		rgba(0, 0, 0, 0.16);
	border-radius: 20px;
  border: solid 3px #ffffff;
  font-family: PingFang SC;
	font-size: 24px;
	font-weight: 500;
	font-stretch: normal;
	line-height: 37px;
	letter-spacing: 0px;
  color: #ffffff;
  position: none;
  display: flex;
  flex-direction: row; align-items: center; justify-content: center;
  margin-left: 0px;
  margin-right: 0px;
  padding-left: 0px;
  padding-right: 0px;
}
.color {
  background-image: linear-gradient(210deg, 
		#f2fcfe 0%, 
		#1c92d2 100%);
}
.sbtn {
	width: 80px;
  height: 34px;
	box-shadow: 0px 3px 10px 0px 
		rgba(0, 0, 0, 0.16);
	border-radius: 20px;
  border: solid 1px #ffffff;
  font-family: PingFang SC;
	font-size: 14px;
	font-weight: 300;
	font-stretch: normal;
	line-height: 37px;
	letter-spacing: 0px;
  color: #ffffff;
  position: none;
  display: flex;
  flex-direction: row; align-items: center; justify-content: center;
  margin-left: 0px;
  margin-right: 0px;
  padding-left: 0px;
  padding-right: 0px;
}
.footer {
  font-family: PingFang SC;
	font-size: 26px;
	font-weight: 150;
	font-stretch: normal;
	line-height: 30px;
	letter-spacing: 0px;
	color: #1c92d2;
}
.btn {
  display: flex; flex-direction: row; align-items: center; justify-content: center;
  width: 50px;
	height: 50px;
	box-shadow: 0px 3px 6px 0px 
    rgba(0, 0, 0, 0.16);
  border-radius: 50%;
  border: solid 2px #ffffff;
  margin: 12px;
  background-blend-mode: screen;
  text-align: center;
	line-height: 50px;
	padding-left: 0px;
	padding-right: 0px;
	margin-left: 0px;
	margin-right: 0px;
	box-sizing: content-box;
	padding: 0px 0px;
}
.note {
  font-family: PingFang SC;
	font-size: 14px;
	font-weight: 200;
	font-stretch: normal;
	line-height: 20px;
	letter-spacing: 0px;
  color: #808080;
  /* margin: 24px;
  margin-top: 2px; */
}
.mode {
	width: 125px;
  height: 40px;
	border-radius: 20px;
  border: solid 2px #1c92d2;
  font-family: PingFang SC;
	font-size: 22px;
	font-weight: 200;
	font-stretch: normal;
	line-height: 40px;
	letter-spacing: 0px;
  color: #1c92d2;
  position: none;
  display: flex;
  flex-direction: row; align-items: center; justify-content: center;
  margin-left: 0px;
  margin-right: 0px;
  padding-left: 0px;
  padding-right: 0px;
}