<!--miniprogram/pages/filter/filter.wxml-->
<view class="blank">
    <button class='back'>返回首页</button>
</view>
<canvas canvas-id='filter' style='margin:0 auto;width:300px; height:400px; border:5px solid #ddd;'></canvas>
<view class='white'>
</view>
<view class='flex'>
    <block wx:for="{{array2}}" wx:for-item="item">
        <view wx:if="{{selected}}" class="chose-txt" data-id="{{index}}" bindtap="choseTxtColor" style="{{index == id?'background:url() right no-repeat; border:1rpx solid black; color: #e8580c':'baciground:url();border:1rpx solid grey;color:gray'}}">
            <text class="chose-p" >{{item.name}}</text>
        </view>
    </block>
</view>
<view class='btns'>
    <button class='choose' bindtap='choose'>图片选择</button>
    <button wx:if="{{selected}}" bindtap='save' class='save' style='width:40%;'>保存</button>
</view>